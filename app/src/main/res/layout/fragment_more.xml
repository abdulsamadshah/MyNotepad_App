<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".bottomNavigation.MoreFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="2dp"
        android:background="@drawable/layoutshape"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatar" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:text="@string/notesigned"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/theme"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/theme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
               android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="Theme"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-65dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearsetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
               android:fontFamily="sans-serif"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Setting"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/likeonfacebook"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-67dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facebooks" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Like us on Facebook"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>