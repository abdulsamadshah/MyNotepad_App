<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#0F132E"
    android:layout_height="match_parent"
    tools:context=".SignupoptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="218dp"
            android:layout_height="110dp"
            android:textAlignment="center"
            app:civ_border_width="2dp"
            app:civ_border_color="#651FFF"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Profile Info" />

        <EditText
            android:id="@+id/rs_name"
            android:layout_width="299dp"
            android:layout_height="54dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:background="@drawable/textbox_outline"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/rs_email"
            android:layout_width="299dp"
            android:layout_height="54dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_outline"
            android:ems="10"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:padding="7dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/rs_password"
            android:layout_width="299dp"
            android:layout_height="54dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbox_outline"
            android:ems="10"
            android:textColor="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="7dp"
            android:textColorHint="@color/white" />




        <Button
            android:id="@+id/rs_SignUp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/textbox_outline"
            android:layout_marginTop="45dp"
            android:backgroundTint="#2E46CA"
            android:textSize="25dp"
            android:text="SignUp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am a Already User"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignIn"
            android:textColor="#00B0FF"
            android:textStyle="bold"
            android:layout_marginRight="-90dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:textSize="16dp"/>
    </LinearLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="-0dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/google"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="17sp"
        android:backgroundTint="#3D5AFE"
        android:drawableLeft="@drawable/googles"
        android:text="SIGN IN WITH GOOGLE"/>

</LinearLayout>